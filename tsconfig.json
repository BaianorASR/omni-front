{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@app/components": ["components/"],
      "@app/components/*": ["components/*"],
      "@app/store": ["store/"],
      "@app/store/*": ["store/*"],
      "@app/hooks": ["hooks/"],
      "@app/hooks/*": ["hooks/*"],
      "@app/services": ["services/"],
      "@app/services/*": ["services/*"],
      "@app/util": ["util/"],
      "@app/util/*": ["util/*"],
      "@app/styles": ["styles/"],
      "@app/styles/*": ["styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
